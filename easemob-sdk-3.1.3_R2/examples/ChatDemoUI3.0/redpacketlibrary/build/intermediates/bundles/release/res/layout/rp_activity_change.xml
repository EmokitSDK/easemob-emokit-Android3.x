<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/money_bg_color">

    <com.easemob.redpacketui.widget.RPTitleBar
        android:id="@+id/change_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:RPrightTextColor="@color/button_blue"
        app:RPrightText="@string/change_detail"
        app:RPleftImage="@drawable/rp_back_arrow_blue"
        app:RPmytitle="@string/small_change"
        app:RPtitleBackground="@color/money_white"
        app:RPtitleTextColor="@color/text_black" />

    <FrameLayout
        android:id="@+id/change_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/change_title_bar" />
    <ProgressBar
        android:id="@+id/progressBar1"
        style="@style/LoadingProgressStyle"
        android:visibility="gone"
        android:layout_centerInParent="true" />
</RelativeLayout>
